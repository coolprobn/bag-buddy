<div class="min-h-screen bg-secondary-50">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-4">
        <div>
          <h1 class="text-3xl font-bold text-primary-900 mb-2">My Profile</h1>
          <p class="text-secondary-600">View and manage your account information</p>
        </div>
        <%= render Buttons::PrimaryComponent.new(href: edit_profile_path) do %>
          ‚úèÔ∏è Edit Profile
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Personal Information -->
      <%= render CardComponent.new(title: "Personal Information") do %>
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-secondary-600">Full Name</dt>
            <dd class="mt-1 text-lg text-primary-900"><%= @user.full_name %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-secondary-600">First Name</dt>
            <dd class="mt-1 text-primary-900"><%= @user.first_name %></dd>
          </div>

          <% if @user.last_name.present? %>
            <div>
              <dt class="text-sm font-medium text-secondary-600">Last Name</dt>
              <dd class="mt-1 text-primary-900"><%= @user.last_name %></dd>
            </div>
          <% end %>

          <div>
            <dt class="text-sm font-medium text-secondary-600">Email</dt>
            <dd class="mt-1 text-primary-900">
              <a href="mailto:<%= @user.email %>" class="text-primary-600 hover:text-primary-700 underline">
                <%= @user.email %>
              </a>
              <% if @user.confirmed? %>
                <span class="ml-2 text-xs bg-green-100 text-green-700 px-2 py-1 rounded">Verified</span>
              <% else %>
                <span class="ml-2 text-xs bg-yellow-100 text-yellow-700 px-2 py-1 rounded">Unverified</span>
              <% end %>
            </dd>
          </div>

          <% if @user.phone.present? %>
            <div>
              <dt class="text-sm font-medium text-secondary-600">Phone</dt>
              <dd class="mt-1 text-primary-900">
                <a href="tel:<%= @user.phone %>" class="text-primary-600 hover:text-primary-700 underline">
                  <%= @user.phone %>
                </a>
              </dd>
            </div>
          <% end %>

          <% if @user.address.present? %>
            <div>
              <dt class="text-sm font-medium text-secondary-600">Address</dt>
              <dd class="mt-1 text-primary-900 whitespace-pre-wrap"><%= @user.address %></dd>
            </div>
          <% end %>
        </dl>
      <% end %>

      <!-- Account Information -->
      <%= render CardComponent.new(title: "Account Information") do %>
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-secondary-600">Member Since</dt>
            <dd class="mt-1 text-primary-900"><%= @user.created_at.strftime("%B %d, %Y") %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-secondary-600">Last Sign In</dt>
            <dd class="mt-1 text-primary-900">
              <% if @user.last_sign_in_at.present? %>
                <%= @user.last_sign_in_at.strftime("%B %d, %Y at %I:%M %p") %>
              <% else %>
                <span class="text-secondary-500">Never</span>
              <% end %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-secondary-600">Total Sign Ins</dt>
            <dd class="mt-1 text-primary-900"><%= @user.sign_in_count %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-secondary-600">Account Status</dt>
            <dd class="mt-1">
              <% if @user.confirmed? %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                  ‚úì Active
                </span>
              <% else %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                  ‚ö† Pending Confirmation
                </span>
              <% end %>
            </dd>
          </div>
        </dl>
      <% end %>
    </div>

    <!-- Quick Actions -->
    <div class="mt-6">
      <%= render CardComponent.new(title: "Account Actions") do %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <%= render Buttons::PrimaryComponent.new(href: edit_profile_path, full_width: true) do %>
            ‚úèÔ∏è Edit Profile
          <% end %>
          <%= render Buttons::SecondaryComponent.new(href: edit_user_registration_path, full_width: true) do %>
            üîí Change Password
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

