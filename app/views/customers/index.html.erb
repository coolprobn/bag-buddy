<div class="min-h-screen bg-secondary-50">
  <div class="max-w-7xl mx-auto">
    <div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-primary-900 mb-2">Customers</h1>
        <p class="text-secondary-600">Manage your customer database</p>
      </div>
      <%= render Buttons::PrimaryComponent.new(href: new_customer_path) do %>
        â• New Customer
      <% end %>
    </div>

    <!-- Search Form -->
    <%= render SearchFormComponent.new(
          q: @q,
          url: customers_path,
          fields: [
            { name: :first_name_or_last_name_cont, placeholder: "Search by name..." },
            { name: :email_cont, placeholder: "Search by email..." },
            { name: :phone_or_whatsapp_number_cont, placeholder: "Search by phone..." },
            { name: :instagram_profile_url_or_tiktok_profile_url_or_facebook_url_cont, placeholder: "Search by social handle..." }
          ]
        ) do |f| %>
    <% end %>

    <!-- Customers List -->
    <% if @customers.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-6">
        <% @customers.each do |customer| %>
          <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
            <div class="mb-4">
              <h3 class="text-xl font-semibold text-primary-900 mb-2"><%= customer.full_name %></h3>
              <% if customer.email.present? %>
                <p class="text-secondary-600 mb-1">
                  <span class="font-medium">ğŸ“§</span> <%= customer.email %>
                </p>
              <% end %>
              <% if customer.phone.present? %>
                <p class="text-secondary-600 mb-1">
                  <span class="font-medium">ğŸ“</span> 
                  <a href="tel:<%= customer.phone %>" class="text-primary-600 hover:text-primary-700 underline">
                    <%= customer.phone %>
                  </a>
                </p>
              <% end %>
              <% if customer.address.present? %>
                <p class="text-secondary-600 mb-1 text-sm">
                  <span class="font-medium">ğŸ“</span> <%= truncate(customer.address, length: 50) %>
                </p>
              <% end %>
            </div>

            <!-- Social Links -->
            <% if customer.instagram_profile_url.present? || customer.tiktok_profile_url.present? || customer.facebook_url.present? || customer.whatsapp_number.present? %>
              <div class="mb-4 pt-4 border-t border-secondary-200">
                <div class="flex flex-wrap gap-2">
                  <% if customer.instagram_profile_url.present? %>
                    <a href="https://instagram.com/<%= customer.instagram_profile_url %>" 
                       target="_blank" 
                       rel="noopener noreferrer"
                       class="bg-pink-100 text-pink-700 px-3 py-1 rounded text-xs font-medium hover:bg-pink-200 transition-colors">
                      ğŸ“· Instagram
                    </a>
                  <% end %>
                  <% if customer.tiktok_profile_url.present? %>
                    <a href="https://tiktok.com/@<%= customer.tiktok_profile_url %>" 
                       target="_blank" 
                       rel="noopener noreferrer"
                       class="bg-black text-white px-3 py-1 rounded text-xs font-medium hover:bg-gray-800 transition-colors">
                      ğŸµ TikTok
                    </a>
                  <% end %>
                  <% if customer.facebook_url.present? %>
                    <a href="https://facebook.com/<%= customer.facebook_url %>" 
                       target="_blank" 
                       rel="noopener noreferrer"
                       class="bg-blue-100 text-blue-700 px-3 py-1 rounded text-xs font-medium hover:bg-blue-200 transition-colors">
                      ğŸ‘¥ Facebook
                    </a>
                  <% end %>
                  <% if customer.whatsapp_number.present? %>
                    <a href="https://wa.me/<%= customer.whatsapp_number.gsub(/\D/, '') %>" 
                       target="_blank" 
                       rel="noopener noreferrer"
                       class="bg-green-100 text-green-700 px-3 py-1 rounded text-xs font-medium hover:bg-green-200 transition-colors">
                      ğŸ’¬ WhatsApp
                    </a>
                  <% end %>
                </div>
              </div>
            <% end %>

            <div class="flex gap-2 pt-4 border-t border-secondary-200">
              <%= render Buttons::PrimaryComponent.new(size: :sm, href: customer_path(customer), class: "flex-1") do %>
                View
              <% end %>
              <%= render Buttons::OutlineComponent.new(size: :sm, href: edit_customer_path(customer), class: "flex-1") do %>
                Edit
              <% end %>
              <%= render Buttons::DangerComponent.new(size: :sm, href: customer_path(customer), method: :delete, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class: "flex-1") do %>
                Delete
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="flex justify-center">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-12 text-center">
        <p class="text-secondary-600 text-lg mb-4">No customers found.</p>
        <%= render Buttons::PrimaryComponent.new(href: new_customer_path) do %>
          Create your first customer
        <% end %>
      </div>
    <% end %>
  </div>
</div>

