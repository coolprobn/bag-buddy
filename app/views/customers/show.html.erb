<div class="min-h-screen bg-secondary-50">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h1 class="text-3xl font-bold text-primary-900 mb-2"><%= @customer.full_name %></h1>
          <p class="text-secondary-600">Customer Details</p>
        </div>
        <%= render Buttons::PrimaryComponent.new(href: edit_customer_path(@customer)) do %>
          Edit Customer
        <% end %>
      </div>
      <%= link_to "â† Back to Customers", customers_path, 
          class: "text-primary-600 hover:text-primary-700 font-medium" %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Contact Information -->
      <%= render CardComponent.new(title: "Contact Information") do %>
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-secondary-600">Full Name</dt>
            <dd class="mt-1 text-lg text-primary-900"><%= @customer.full_name %></dd>
          </div>

          <% if @customer.email.present? %>
            <div>
              <dt class="text-sm font-medium text-secondary-600">Email</dt>
              <dd class="mt-1 text-primary-900">
                <a href="mailto:<%= @customer.email %>" class="text-primary-600 hover:text-primary-700 underline">
                  <%= @customer.email %>
                </a>
              </dd>
            </div>
          <% end %>

          <% if @customer.phone.present? %>
            <div>
              <dt class="text-sm font-medium text-secondary-600">Phone</dt>
              <dd class="mt-1 text-primary-900">
                <a href="tel:<%= @customer.phone %>" class="text-primary-600 hover:text-primary-700 underline">
                  <%= @customer.phone %>
                </a>
              </dd>
            </div>
          <% end %>

          <% if @customer.address.present? %>
            <div>
              <dt class="text-sm font-medium text-secondary-600">Address</dt>
              <dd class="mt-1 text-primary-900 whitespace-pre-wrap"><%= @customer.address %></dd>
            </div>
          <% end %>

          <% if @customer.notes.present? %>
            <div>
              <dt class="text-sm font-medium text-secondary-600">Notes</dt>
              <dd class="mt-1 text-primary-900 whitespace-pre-wrap"><%= @customer.notes %></dd>
            </div>
          <% end %>
        </dl>
      <% end %>

      <!-- Social Media Profiles -->
      <% if @customer.instagram_profile_url.present? || @customer.tiktok_profile_url.present? || @customer.facebook_url.present? || @customer.whatsapp_number.present? %>
        <%= render CardComponent.new(title: "Social Media Profiles") do %>
          <div class="space-y-3">
            <% if @customer.instagram_profile_url.present? %>
              <div>
                <dt class="text-sm font-medium text-secondary-600 mb-1">Instagram</dt>
                <dd class="mt-1">
                  <a href="https://instagram.com/<%= @customer.instagram_profile_url %>" 
                     target="_blank" 
                     rel="noopener noreferrer"
                     class="inline-flex items-center gap-2 bg-pink-100 text-pink-700 px-4 py-2 rounded-lg font-medium hover:bg-pink-200 transition-colors">
                    ðŸ“· @<%= @customer.instagram_profile_url %>
                  </a>
                </dd>
              </div>
            <% end %>

            <% if @customer.tiktok_profile_url.present? %>
              <div>
                <dt class="text-sm font-medium text-secondary-600 mb-1">TikTok</dt>
                <dd class="mt-1">
                  <a href="https://tiktok.com/@<%= @customer.tiktok_profile_url %>" 
                     target="_blank" 
                     rel="noopener noreferrer"
                     class="inline-flex items-center gap-2 bg-black text-white px-4 py-2 rounded-lg font-medium hover:bg-gray-800 transition-colors">
                    ðŸŽµ @<%= @customer.tiktok_profile_url %>
                  </a>
                </dd>
              </div>
            <% end %>

            <% if @customer.facebook_url.present? %>
              <div>
                <dt class="text-sm font-medium text-secondary-600 mb-1">Facebook</dt>
                <dd class="mt-1">
                  <a href="https://facebook.com/<%= @customer.facebook_url %>" 
                     target="_blank" 
                     rel="noopener noreferrer"
                     class="inline-flex items-center gap-2 bg-blue-100 text-blue-700 px-4 py-2 rounded-lg font-medium hover:bg-blue-200 transition-colors">
                    ðŸ‘¥ @<%= @customer.facebook_url %>
                  </a>
                </dd>
              </div>
            <% end %>

            <% if @customer.whatsapp_number.present? %>
              <div>
                <dt class="text-sm font-medium text-secondary-600 mb-1">WhatsApp</dt>
                <dd class="mt-1">
                  <a href="https://wa.me/<%= @customer.whatsapp_number.gsub(/\D/, '') %>" 
                     target="_blank" 
                     rel="noopener noreferrer"
                     class="inline-flex items-center gap-2 bg-green-100 text-green-700 px-4 py-2 rounded-lg font-medium hover:bg-green-200 transition-colors">
                    ðŸ’¬ <%= @customer.whatsapp_number %>
                  </a>
                </dd>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Sales History (if any) -->
    <% if @customer.sales.any? %>
      <div class="mt-6">
        <%= render CardComponent.new(title: "Purchase History") do %>
          <div class="space-y-3">
            <% @customer.sales.order(created_at: :desc).limit(10).each do |sale| %>
              <div class="flex items-center justify-between p-3 bg-secondary-50 rounded-lg">
                <div>
                  <p class="font-medium text-primary-900"><%= sale.product.name %></p>
                  <p class="text-sm text-secondary-600">
                    <%= sale.quantity %> Ã— Rs. <%= number_with_delimiter(sale.selling_price) %>
                    <span class="ml-2">â€¢</span>
                    <span class="ml-2"><%= sale.created_at.strftime("%b %d, %Y") %></span>
                  </p>
                </div>
                <div class="text-right">
                  <p class="font-semibold text-primary-900">Rs. <%= number_with_delimiter(sale.total) %></p>
                  <p class="text-xs text-secondary-600 capitalize"><%= sale.payment_method %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

