<div class="min-h-screen bg-gradient-to-br from-primary-50 to-primary-100 flex items-center justify-center py-12">
  <div class="max-w-md w-full">
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-primary-900 mb-2">Create Account</h1>
        <p class="text-primary-600">Join Bag Buddy today</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :first_name, class: "block text-sm font-medium text-primary-700 mb-2" %>
          <%= f.text_field :first_name, 
                autofocus: true,
                class: "w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-colors",
                placeholder: "John" %>
        </div>

        <div>
          <%= f.label :last_name, class: "block text-sm font-medium text-primary-700 mb-2" %>
          <%= f.text_field :last_name,
                class: "w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-colors",
                placeholder: "Doe" %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-primary-700 mb-2" %>
          <%= f.email_field :email, 
                autocomplete: "email",
                class: "w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-colors",
                placeholder: "you@example.com" %>
        </div>

        <div>
          <%= f.label :phone, class: "block text-sm font-medium text-primary-700 mb-2" %>
          <%= f.text_field :phone,
                class: "w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-colors",
                placeholder: "+977 98XXXXXXXX" %>
        </div>

        <div>
          <%= f.label :address, class: "block text-sm font-medium text-primary-700 mb-2" %>
          <%= f.text_area :address,
                rows: 3,
                class: "w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-colors",
                placeholder: "Your address (optional)" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-primary-700 mb-2" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-secondary-600 mb-2">(<%= @minimum_password_length %> characters minimum)</p>
          <% end %>
          <%= f.password_field :password, 
                autocomplete: "new-password",
                class: "w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-colors",
                placeholder: "••••••••" %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-primary-700 mb-2" %>
          <%= f.password_field :password_confirmation, 
                autocomplete: "new-password",
                class: "w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-colors",
                placeholder: "••••••••" %>
        </div>

        <div>
          <%= f.submit "Sign up", class: "w-full bg-primary-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-colors cursor-pointer" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
