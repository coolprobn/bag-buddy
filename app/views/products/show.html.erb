<div class="min-h-screen bg-secondary-50">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h1 class="text-3xl font-bold text-primary-900 mb-2"><%= @product.name %></h1>
          <p class="text-secondary-600"><%= @product.category.presence || "Product Details" %></p>
        </div>
        <%= render Buttons::PrimaryComponent.new(href: edit_product_path(@product)) do %>
          Edit Product
        <% end %>
      </div>
      <%= link_to "â† Back to Products", products_path, 
          class: "text-primary-600 hover:text-primary-700 font-medium" %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Product Images -->
      <div>
        <%= render CardComponent.new(title: "Product Images") do %>
          <% if @product.images.attached? %>
            <div class="grid grid-cols-2 gap-4">
              <% @product.images.each do |image| %>
                <div class="aspect-square bg-secondary-100 rounded-lg overflow-hidden">
                  <%= image_tag image, class: "w-full h-full object-cover", alt: @product.name %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="aspect-square bg-secondary-100 rounded-lg flex items-center justify-center">
              <svg class="w-24 h-24 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Product Details -->
      <div class="space-y-6">
        <%= render CardComponent.new(title: "Product Information") do %>
          <dl class="space-y-4">
            <div>
              <dt class="text-sm font-medium text-secondary-600">Name</dt>
              <dd class="mt-1 text-lg text-primary-900"><%= @product.name %></dd>
            </div>

            <% if @product.category.present? %>
              <div>
                <dt class="text-sm font-medium text-secondary-600">Category</dt>
                <dd class="mt-1 text-primary-900"><%= @product.category %></dd>
              </div>
            <% end %>

            <% if @product.color_family.present? %>
              <div>
                <dt class="text-sm font-medium text-secondary-600">Color Family</dt>
                <dd class="mt-1 text-primary-900"><%= @product.color_family %></dd>
              </div>
            <% end %>

            <div>
              <dt class="text-sm font-medium text-secondary-600">Status</dt>
              <dd class="mt-1">
                <% case @product.status %>
                <% when "active" %>
                  <span class="inline-block bg-green-500 text-white text-sm font-semibold px-3 py-1 rounded">Active</span>
                <% when "draft" %>
                  <span class="inline-block bg-yellow-500 text-white text-sm font-semibold px-3 py-1 rounded">Draft</span>
                <% when "archived" %>
                  <span class="inline-block bg-secondary-500 text-white text-sm font-semibold px-3 py-1 rounded">Archived</span>
                <% end %>
              </dd>
            </div>

            <% if @product.current_vendor.present? %>
              <div>
                <dt class="text-sm font-medium text-secondary-600">Vendor</dt>
                <dd class="mt-1 text-primary-900">
                  <%= link_to @product.current_vendor.name, edit_vendor_path(@product.current_vendor), 
                      class: "text-primary-600 hover:text-primary-700 underline" %>
                </dd>
              </div>
            <% end %>

            <% if @product.description.present? %>
              <div>
                <dt class="text-sm font-medium text-secondary-600">Description</dt>
                <dd class="mt-1 text-primary-900 whitespace-pre-wrap"><%= @product.description %></dd>
              </div>
            <% end %>
          </dl>
        <% end %>

        <%= render CardComponent.new(title: "Pricing & Inventory") do %>
          <dl class="space-y-4">
            <div>
              <dt class="text-sm font-medium text-secondary-600">Stock Quantity</dt>
              <dd class="mt-1">
                <span class="text-2xl font-bold <%= @product.stock_quantity <= (ApplicationSetting.get("low_stock_threshold") || 1) ? 'text-accent-600' : 'text-primary-600' %>">
                  <%= @product.stock_quantity %>
                </span>
                <% if @product.stock_quantity <= (ApplicationSetting.get("low_stock_threshold") || 1) %>
                  <span class="ml-2 text-accent-600 font-medium">(Low Stock)</span>
                <% end %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-secondary-600">Cost Price</dt>
              <dd class="mt-1 text-xl font-semibold text-primary-900">Rs. <%= number_with_delimiter(@product.current_cost_price) %></dd>
            </div>

            <% if @product.auto_suggested_selling_price.present? %>
              <div>
                <dt class="text-sm font-medium text-secondary-600">Suggested Selling Price</dt>
                <dd class="mt-1 text-xl font-semibold text-primary-900">Rs. <%= number_with_delimiter(@product.auto_suggested_selling_price) %></dd>
              </div>
            <% end %>
          </dl>
        <% end %>
      </div>
    </div>
  </div>
</div>

