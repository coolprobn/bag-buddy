<div class="min-h-screen bg-secondary-50">
  <div class="max-w-7xl mx-auto">
    <div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-primary-900 mb-2">Products</h1>
        <p class="text-secondary-600">Manage your product inventory</p>
      </div>
      <%= render Buttons::PrimaryComponent.new(href: new_product_path) do %>
        <span class="text-white">+</span> New Product
      <% end %>
    </div>

    <!-- Search and Filter Form -->
    <%= render SearchFormComponent.new(
          q: @q,
          url: products_path,
          form_class: "space-y-4",
          fields: [
            { name: :name_cont, placeholder: "Search by name..." },
            { name: :category_cont, placeholder: "Search by category..." },
            { name: :current_vendor_id_eq, placeholder: "Search by vendor..." },
            { name: :status_eq, placeholder: "Search by status...", options: [["All Statuses", ""], ["Active", "active"], ["Draft", "draft"], ["Archived", "archived"]] }
          ]
        ) %>

    <!-- Products Grid -->
    <% if @products.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 mb-6">
        <% @products.each do |product| %>
          <div class="bg-white rounded-lg shadow overflow-hidden hover:shadow-lg transition-shadow">
            <!-- Product Image -->
            <div class="aspect-square bg-secondary-100 relative">
              <% if product.images.attached? %>
                <%= image_tag product.images.first, 
                    class: "w-full h-full object-cover",
                    alt: product.name %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center text-secondary-400">
                  <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
              <% end %>
              <!-- Status Badge -->
              <div class="absolute top-2 right-2">
                <% case product.status %>
                <% when "active" %>
                  <span class="bg-green-500 text-white text-xs font-semibold px-2 py-1 rounded">Active</span>
                <% when "draft" %>
                  <span class="bg-yellow-500 text-white text-xs font-semibold px-2 py-1 rounded">Draft</span>
                <% when "archived" %>
                  <span class="bg-secondary-500 text-white text-xs font-semibold px-2 py-1 rounded">Archived</span>
                <% end %>
              </div>
              <!-- Low Stock Badge -->
              <% low_stock_threshold = ApplicationSetting.get("low_stock_threshold") || 1 %>
              <% if product.stock_quantity <= low_stock_threshold %>
                <div class="absolute top-2 left-2">
                  <span class="bg-accent-500 text-white text-xs font-semibold px-2 py-1 rounded">Low Stock</span>
                </div>
              <% end %>
            </div>
            
            <!-- Product Info -->
            <div class="p-4">
              <h3 class="font-semibold text-primary-900 mb-2 line-clamp-2"><%= product.name %></h3>
              <% if product.category.present? %>
                <p class="text-sm text-secondary-600 mb-2"><%= product.category %></p>
              <% end %>
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm text-secondary-600">Stock:</span>
                <span class="font-semibold <%= product.stock_quantity <= low_stock_threshold ? 'text-accent-600' : 'text-primary-600' %>">
                  <%= product.stock_quantity %>
                </span>
              </div>
              <div class="flex items-center justify-between mb-4">
                <span class="text-sm text-secondary-600">Cost:</span>
                <span class="font-semibold text-primary-600">Rs. <%= number_with_delimiter(product.current_cost_price) %></span>
              </div>
              <div class="flex gap-2">
                <%= render Buttons::PrimaryComponent.new(size: :sm, href: product_path(product), class: "flex-1 text-sm") do %>
                  View
                <% end %>
                <%= render Buttons::OutlineComponent.new(size: :sm, href: edit_product_path(product), class: "flex-1 text-sm") do %>
                  Edit
                <% end %>
                <%= render Buttons::DangerComponent.new(size: :sm, href: product_path(product), method: :delete, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class: "flex-1 text-sm") do %>
                  Delete
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="flex justify-center">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-12 text-center">
        <p class="text-secondary-600 text-lg mb-4">No products found.</p>
        <%= render Buttons::PrimaryComponent.new(href: new_product_path) do %>
          Create your first product
        <% end %>
      </div>
    <% end %>
  </div>
</div>
