<div class="min-h-screen bg-secondary-50">
  <div class="max-w-7xl mx-auto">
    <div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-primary-900 mb-2">Expenses</h1>
        <p class="text-secondary-600">Track your business expenses</p>
      </div>
      <%= render Buttons::PrimaryComponent.new(href: new_expense_path) do %>
        <span class="text-white">+</span> New Expense
      <% end %>
    </div>

    <!-- Search and Filter Form -->
    <%= render SearchFormComponent.new(
          q: @q,
          url: expenses_path,
          form_class: "space-y-4",
          fields: [
            { name: :category_eq, placeholder: "Search by category...", options: [["All Categories", ""], ["Rent", "rent"], ["Ads", "ads"], ["Packaging", "packaging"], ["Misc", "misc"]] },
            { name: :description_cont, placeholder: "Search by description..." },
            { name: :amount_gteq, placeholder: "Search by amount..." }
          ]
        ) %>

    <!-- Expenses List -->
    <% if @expenses.any? %>
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-secondary-200">
            <thead class="bg-secondary-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Date
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Category
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Description
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Amount
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-secondary-200">
              <% @expenses.each do |expense| %>
                <tr class="hover:bg-secondary-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary-700">
                    <%= l(expense.created_at.to_date, format: :long) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% category_colors = {
                      "rent" => "bg-red-100 text-red-800",
                      "ads" => "bg-blue-100 text-blue-800",
                      "packaging" => "bg-green-100 text-green-800",
                      "misc" => "bg-gray-100 text-gray-800"
                    } %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= category_colors[expense.category] || 'bg-gray-100 text-gray-800' %>">
                      <%= expense.category.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-primary-900"><%= expense.description.presence || "â€”" %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-semibold text-primary-900">Rs. <%= number_with_delimiter(expense.amount) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <div class="flex justify-end gap-2">
                      <%= render Buttons::OutlineComponent.new(size: :sm, href: expense_path(expense)) do %>
                        View
                      <% end %>
                      <%= render Buttons::OutlineComponent.new(size: :sm, href: edit_expense_path(expense)) do %>
                        Edit
                      <% end %>
                      <%= render Buttons::DangerComponent.new(size: :sm, href: expense_path(expense), method: :delete, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }) do %>
                        Delete
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Pagination -->
      <div class="flex justify-center mt-6">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-12 text-center">
        <p class="text-secondary-600 text-lg mb-4">No expenses found.</p>
        <%= render Buttons::PrimaryComponent.new(href: new_expense_path) do %>
          Create your first expense
        <% end %>
      </div>
    <% end %>
  </div>
</div>

