<div class="min-h-screen bg-secondary-50">
  <div class="max-w-7xl mx-auto">
    <div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-primary-900 mb-2">Sales</h1>
        <p class="text-secondary-600">Manage your sales transactions</p>
      </div>
      <%= render Buttons::PrimaryComponent.new(href: new_sale_path) do %>
        âž• New Sale
      <% end %>
    </div>

    <!-- Search and Filter Form -->
    <%= render SearchFormComponent.new(
          q: @q,
          url: sales_path,
          form_class: "space-y-4"
        ) do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <%= f.search_field :product_name_cont, placeholder: "Search by product...",
                class: "w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none" %>
        </div>
        <div>
          <%= f.search_field :customer_first_name_or_customer_last_name_cont, 
                placeholder: "Search by customer...",
                class: "w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none" %>
        </div>
        <div>
          <%= f.select :payment_method_eq, 
                options_for_select([
                  ["All Payment Methods", ""],
                  ["Cash", "cash"],
                  ["Card", "card"],
                  ["Online", "online"],
                  ["Bank Transfer", "bank_transfer"],
                  ["Other", "other"]
                ], params.dig(:q, :payment_method_eq)),
                {},
                class: "w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none" %>
        </div>
      </div>
    <% end %>

    <!-- Sales List -->
    <% if @sales.any? %>
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-secondary-200">
            <thead class="bg-secondary-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Date
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Product
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Customer
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Quantity
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Total
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Payment
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-secondary-200">
              <% @sales.each do |sale| %>
                <tr class="hover:bg-secondary-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary-700">
                    <%= l(sale.created_at.to_date, format: :long) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-primary-900"><%= sale.product.name %></div>
                    <div class="text-sm text-secondary-500">Rs. <%= number_with_delimiter(sale.selling_price) %> each</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-primary-900"><%= sale.customer.full_name %></div>
                    <% if sale.customer.phone.present? %>
                      <div class="text-sm text-secondary-500">
                        <a href="tel:<%= sale.customer.phone %>" class="text-primary-600 hover:text-primary-700">
                          <%= sale.customer.phone %>
                        </a>
                      </div>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary-700">
                    <%= sale.quantity %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-semibold text-primary-900">Rs. <%= number_with_delimiter(sale.total) %></div>
                    <% if sale.discount_amount > 0 %>
                      <div class="text-xs text-accent-600">Discount: Rs. <%= number_with_delimiter(sale.discount_amount) %></div>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-800">
                      <%= sale.payment_method.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <div class="flex justify-end gap-2">
                      <%= render Buttons::OutlineComponent.new(size: :sm, href: sale_path(sale)) do %>
                        View
                      <% end %>
                      <%= render Buttons::OutlineComponent.new(size: :sm, href: edit_sale_path(sale)) do %>
                        Edit
                      <% end %>
                      <%= render Buttons::DangerComponent.new(size: :sm, href: sale_path(sale), method: :delete, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }) do %>
                        Delete
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Pagination -->
      <div class="flex justify-center mt-6">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-12 text-center">
        <p class="text-secondary-600 text-lg mb-4">No sales found.</p>
        <%= render Buttons::PrimaryComponent.new(href: new_sale_path) do %>
          Create your first sale
        <% end %>
      </div>
    <% end %>
  </div>
</div>

