<div class="min-h-screen bg-secondary-50">
  <div class="max-w-7xl mx-auto">
    <div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-primary-900 mb-2">Sales Returns</h1>
        <p class="text-secondary-600">Manage product returns</p>
      </div>
      <%= render Buttons::PrimaryComponent.new(href: new_sales_return_path) do %>
        <span class="text-white">+</span> New Return
      <% end %>
    </div>

    <!-- Search Form -->
    <%= render SearchFormComponent.new(
          q: @q,
          url: sales_returns_path,
          form_class: "space-y-4",
          fields: [
            { name: :sale_product_name_cont, placeholder: "Search by product..." },
            { name: :reason_cont, placeholder: "Search by reason..." }
          ]
        ) %>

    <!-- Returns List -->
    <% if @sales_returns.any? %>
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-secondary-200">
            <thead class="bg-secondary-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Date
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Sale
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Product
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Return Qty
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Refund Amount
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-secondary-200">
              <% @sales_returns.each do |sales_return| %>
                <tr class="hover:bg-secondary-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary-700">
                    <%= l(sales_return.created_at.to_date, format: :long) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%= link_to "Sale ##{sales_return.sale.obfuscated_id}", sale_path(sales_return.sale), 
                        class: "text-primary-600 hover:text-primary-700 underline text-sm font-medium" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-primary-900"><%= sales_return.sale.product.name %></div>
                    <div class="text-sm text-secondary-500">Customer: <%= sales_return.sale.customer.full_name %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-secondary-700">
                    <%= sales_return.return_quantity %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-semibold text-primary-900">
                      <% if sales_return.refund_amount.present? %>
                        Rs. <%= number_with_delimiter(sales_return.refund_amount) %>
                      <% else %>
                        â€”
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <div class="flex justify-end gap-2">
                      <%= render Buttons::OutlineComponent.new(size: :sm, href: sales_return_path(sales_return)) do %>
                        View
                      <% end %>
                      <%= render Buttons::OutlineComponent.new(size: :sm, href: edit_sales_return_path(sales_return)) do %>
                        Edit
                      <% end %>
                      <%= render Buttons::DangerComponent.new(size: :sm, href: sales_return_path(sales_return), method: :delete, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }) do %>
                        Delete
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Pagination -->
      <div class="flex justify-center mt-6">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-12 text-center">
        <p class="text-secondary-600 text-lg mb-4">No returns found.</p>
        <%= render Buttons::PrimaryComponent.new(href: new_sales_return_path) do %>
          Process your first return
        <% end %>
      </div>
    <% end %>
  </div>
</div>

