<div class="min-h-screen bg-secondary-50">
  <div class="max-w-7xl mx-auto">
    <div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-primary-900 mb-2">Application Settings</h1>
        <p class="text-secondary-600">Manage system configuration</p>
      </div>
      <%= render Buttons::PrimaryComponent.new(href: new_application_setting_path) do %>
        ➕ New Setting
      <% end %>
    </div>

    <!-- Search Form -->
    <%= render SearchFormComponent.new(
          q: @q,
          url: application_settings_path,
          form_class: "space-y-4"
        ) do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= f.search_field :key_cont, 
                placeholder: "Search by key...",
                class: "w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none" %>
        </div>
        <div>
          <%= f.select :field_type_eq, 
                options_for_select([
                  ["All Types", ""],
                  ["Number Field", "number_field"],
                  ["Text Field", "text_field"],
                  ["Boolean Field", "boolean_field"]
                ], params.dig(:q, :field_type_eq)),
                {},
                class: "w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none" %>
        </div>
      </div>
    <% end %>

    <!-- Settings List -->
    <% if @application_settings.any? %>
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-secondary-200">
            <thead class="bg-secondary-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Key
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Type
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Value
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Description
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-secondary-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-secondary-200">
              <% @application_settings.each do |setting| %>
                <tr class="hover:bg-secondary-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-primary-900"><%= setting.key %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-800">
                      <%= setting.field_type.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-primary-900">
                      <% case setting.field_type %>
                      <% when "boolean_field" %>
                        <span class="<%= setting.parsed_value ? 'text-green-600' : 'text-red-600' %> font-semibold">
                          <%= setting.parsed_value ? '✓ True' : '✗ False' %>
                        </span>
                      <% when "number_field" %>
                        <%= number_with_delimiter(setting.parsed_value) %>
                      <% else %>
                        <%= truncate(setting.value, length: 50) %>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-secondary-600">
                      <%= truncate(setting.description, length: 60) if setting.description.present? %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <div class="flex justify-end gap-2">
                      <%= render Buttons::OutlineComponent.new(size: :sm, href: application_setting_path(setting)) do %>
                        View
                      <% end %>
                      <%= render Buttons::OutlineComponent.new(size: :sm, href: edit_application_setting_path(setting)) do %>
                        Edit
                      <% end %>
                      <%= render Buttons::DangerComponent.new(size: :sm, href: application_setting_path(setting), method: :delete, data: { confirm: "Are you sure? This may affect system functionality.", turbo_confirm: "Are you sure? This may affect system functionality." }) do %>
                        Delete
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Pagination -->
      <div class="flex justify-center mt-6">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-12 text-center">
        <p class="text-secondary-600 text-lg mb-4">No settings found.</p>
        <%= render Buttons::PrimaryComponent.new(href: new_application_setting_path) do %>
          Create your first setting
        <% end %>
      </div>
    <% end %>
  </div>
</div>

