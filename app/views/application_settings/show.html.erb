<div class="min-h-screen bg-secondary-50">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-primary-900 mb-2">Setting Details</h1>
        <p class="text-secondary-600">Setting: <%= @application_setting.key %></p>
      </div>
      <%= render Buttons::PrimaryComponent.new(href: edit_application_setting_path(@application_setting)) do %>
        Edit Setting
      <% end %>
    </div>

    <%= link_to "â† Back to Settings", application_settings_path, 
        class: "text-primary-600 hover:text-primary-700 font-medium mb-6 inline-block" %>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Setting Information -->
      <%= render CardComponent.new(title: "Setting Information") do %>
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-secondary-600">Key</dt>
            <dd class="mt-1 text-lg font-mono text-primary-900"><%= @application_setting.key %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-secondary-600">Field Type</dt>
            <dd class="mt-1">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 text-primary-800">
                <%= @application_setting.field_type.humanize %>
              </span>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-secondary-600">Value</dt>
            <dd class="mt-1">
              <% case @application_setting.field_type %>
              <% when "boolean_field" %>
                <span class="text-2xl font-bold <%= @application_setting.parsed_value ? 'text-green-600' : 'text-red-600' %>">
                  <%= @application_setting.parsed_value ? 'âœ“ True' : 'âœ— False' %>
                </span>
              <% when "number_field" %>
                <span class="text-2xl font-bold text-primary-900">
                  <%= number_with_delimiter(@application_setting.parsed_value) %>
                </span>
              <% else %>
                <div class="text-lg text-primary-900 whitespace-pre-wrap bg-secondary-50 p-4 rounded-lg">
                  <%= @application_setting.value %>
                </div>
              <% end %>
            </dd>
          </div>

          <% if @application_setting.description.present? %>
            <div>
              <dt class="text-sm font-medium text-secondary-600">Description</dt>
              <dd class="mt-1 text-primary-900 whitespace-pre-wrap"><%= @application_setting.description %></dd>
            </div>
          <% end %>

          <div>
            <dt class="text-sm font-medium text-secondary-600">Created</dt>
            <dd class="mt-1 text-primary-900"><%= l(@application_setting.created_at, format: :long) %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-secondary-600">Last Updated</dt>
            <dd class="mt-1 text-primary-900"><%= l(@application_setting.updated_at, format: :long) %></dd>
          </div>
        </dl>
      <% end %>

      <!-- Usage Information -->
      <%= render CardComponent.new(title: "Usage") do %>
        <div class="space-y-4">
          <div>
            <p class="text-sm text-secondary-600 mb-2">
              This setting can be accessed in your code using:
            </p>
            <div class="bg-secondary-900 text-green-400 p-4 rounded-lg font-mono text-sm overflow-x-auto">
              ApplicationSetting.get("<%= @application_setting.key %>")
            </div>
          </div>
          
          <div>
            <p class="text-sm text-secondary-600 mb-2">Parsed Value:</p>
            <div class="bg-secondary-50 p-4 rounded-lg">
              <code class="text-primary-900">
                <%= @application_setting.parsed_value.inspect %>
              </code>
            </div>
          </div>

          <% if @application_setting.field_type == "number_field" %>
            <div class="p-4 bg-blue-50 rounded-lg">
              <p class="text-sm text-blue-800">
                ðŸ’¡ This is a number field. The value will be automatically converted to an integer or float when accessed.
              </p>
            </div>
          <% elsif @application_setting.field_type == "boolean_field" %>
            <div class="p-4 bg-blue-50 rounded-lg">
              <p class="text-sm text-blue-800">
                ðŸ’¡ This is a boolean field. The value will be automatically converted to true/false when accessed.
              </p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

