<div class="min-h-screen bg-secondary-50">
  <div class="max-w-7xl mx-auto">
    <div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-primary-900 mb-2">Vendors</h1>
        <p class="text-secondary-600">Manage your vendor contacts</p>
      </div>
      <%= render Buttons::PrimaryComponent.new(href: new_vendor_path) do %>
        â• New Vendor
      <% end %>
    </div>

    <!-- Search Form -->
    <%= render SearchFormComponent.new(
          q: @q,
          url: vendors_path,
          fields: [
            { name: :name_cont, placeholder: "Search by name..." },
            { name: :phone_cont, placeholder: "Search by phone..." }
          ]
        ) %>

    <!-- Vendors List -->
    <% if @vendors.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-6">
        <% @vendors.each do |vendor| %>
          <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
            <div class="mb-4">
              <h3 class="text-xl font-semibold text-primary-900 mb-2"><%= vendor.name %></h3>
              <% if vendor.phone.present? %>
                <p class="text-secondary-600 mb-1">
                  <span class="font-medium">ğŸ“</span> 
                  <a href="tel:<%= vendor.phone %>" class="text-primary-600 hover:text-primary-700 underline">
                    <%= vendor.phone %>
                  </a>
                </p>
              <% end %>
              <% if vendor.address.present? %>
                <p class="text-secondary-600 mb-1 text-sm">
                  <span class="font-medium">ğŸ“</span> <%= truncate(vendor.address, length: 50) %>
                </p>
              <% end %>
              <% if vendor.notes.present? %>
                <p class="text-secondary-600 text-sm mt-2">
                  <%= truncate(vendor.notes, length: 80) %>
                </p>
              <% end %>

              <!-- Social Links -->
              <% if vendor.instagram_profile_url.present? || vendor.tiktok_profile_url.present? || vendor.facebook_url.present? || vendor.whatsapp_number.present? %>
                <div class="mb-4 pt-4 border-t border-secondary-200">
                  <div class="flex flex-wrap gap-2">
                    <% if vendor.instagram_profile_url.present? %>
                      <a href="https://instagram.com/<%= vendor.instagram_profile_url %>" 
                         target="_blank" 
                         rel="noopener noreferrer"
                         class="bg-pink-100 text-pink-700 px-3 py-1 rounded text-xs font-medium hover:bg-pink-200 transition-colors">
                        ğŸ“· Instagram
                      </a>
                    <% end %>
                    <% if vendor.tiktok_profile_url.present? %>
                      <a href="https://tiktok.com/@<%= vendor.tiktok_profile_url %>" 
                         target="_blank" 
                         rel="noopener noreferrer"
                         class="bg-black text-white px-3 py-1 rounded text-xs font-medium hover:bg-gray-800 transition-colors">
                        ğŸµ TikTok
                      </a>
                    <% end %>
                    <% if vendor.facebook_url.present? %>
                      <a href="https://facebook.com/<%= vendor.facebook_url %>" 
                         target="_blank" 
                         rel="noopener noreferrer"
                         class="bg-blue-100 text-blue-700 px-3 py-1 rounded text-xs font-medium hover:bg-blue-200 transition-colors">
                        ğŸ‘¥ Facebook
                      </a>
                    <% end %>
                    <% if vendor.whatsapp_number.present? %>
                      <a href="https://wa.me/<%= vendor.whatsapp_number.gsub(/\D/, '') %>" 
                         target="_blank" 
                         rel="noopener noreferrer"
                         class="bg-green-100 text-green-700 px-3 py-1 rounded text-xs font-medium hover:bg-green-200 transition-colors">
                        ğŸ’¬ WhatsApp
                      </a>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="flex gap-2 pt-4 border-t border-secondary-200">
              <%= render Buttons::OutlineComponent.new(size: :sm, href: edit_vendor_path(vendor), class: "flex-1") do %>
                Edit
              <% end %>
              <%= render Buttons::DangerComponent.new(size: :sm, href: vendor_path(vendor), method: :delete, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class: "flex-1") do %>
                Delete
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="flex justify-center">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow p-12 text-center">
        <p class="text-secondary-600 text-lg mb-4">No vendors found.</p>
        <%= render Buttons::PrimaryComponent.new(href: new_vendor_path) do %>
          Create your first vendor
        <% end %>
      </div>
    <% end %>
  </div>
</div>

