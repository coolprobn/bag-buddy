        <div class="grid grid-cols-2 gap-2">
          <% dropdown_items.each do |group| %>
            <% group[:items].each do |item| %>
              <%= link_to item[:path], 
                    class: "flex items-center justify-center py-2 px-3 rounded-lg text-sm transition-colors #{'bg-primary-700 text-white' if active?(item[:path])} #{'hover:bg-primary-700' unless active?(item[:path])}" do %>
